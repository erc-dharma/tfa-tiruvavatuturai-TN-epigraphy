                        <lb n="C3=9"/>...
                        <lb n="C4=10"/>...
                        <lb n="C5=11"/>...
                        <list>
                            <item><lb n="C6=12"/><unclear>I</unclear>ppaṭi Āṟivēṉ niṉṟāṉ muvāyiravēṉ</item>
